@page
@model WebApplication1.Pages.Account.DeleteAccountModel
@{
    ViewData["Title"] = "Удаление аккаунта";
}

<h1>Удаление аккаунта</h1>

<div class="alert alert-danger">
    <h4>Внимание!</h4>
    <p>Вы собираетесь удалить свой аккаунт. Это действие:</p>
    <ul>
        <li>Удалит все ваши данные</li>
        <li>Невозможно будет отменить</li>
        <li>Приведёт к потере доступа к системе</li>
    </ul>
</div>

<form method="post">
    <div class="form-group">
        <label>Для подтверждения введите ваш пароль:</label>
        <input type="password" class="form-control" asp-for="Password" required />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Удалить аккаунт навсегда</button>
        <a asp-page="/Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@if (Model.Message != null)
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}